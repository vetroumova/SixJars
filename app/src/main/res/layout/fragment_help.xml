                    app:layout_widthPercent="45%"
                    android:src="@drawable/main_recycler_item_click"
                    android:layout_below="@+id/tutorialDescriptionText"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/tutorialcashflowText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_below="@+id/tutorialCashflowImage"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tutorial_description_text"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/item_description_dimension"
                    app:layout_heightPercent="15%"
                    app:layout_marginTopPercent="3%"
                    app:layout_widthPercent="95%" />-->

            </android.support.percent.PercentRelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</FrameLayout>
