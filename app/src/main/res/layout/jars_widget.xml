<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/jar_widget_bg"
        android:layout_margin="@dimen/widget_button_margin">

        <ImageButton
            android:id="@+id/appwidget_first_jar"
            android:layout_width="31dp"
            android:layout_height="71dp"
            android:layout_margin="3dp"
            android:src="@drawable/jar"
            android:background="@color/colorWhiteBG"
            android:contentDescription="@string/appwidget_text" />

        <TextView
            android:id="@+id/jar_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBottle"
            android:textSize="@dimen/widget_text_size_v"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/widget_margin"
            android:text="@string/appwidget_text_v" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/jar_widget_bg"
        android:layout_margin="@dimen/widget_button_margin">

        <ImageButton
            android:id="@+id/appwidget_second_jar"
            android:layout_width="31dp"
            android:layout_height="71dp"
            android:layout_margin="3dp"
            android:src="@drawable/jar"
            android:background="@color/colorWhiteBG"
            android:contentDescription="@string/appwidget_text" />

        <TextView
            android:id="@+id/jar_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBottle"
            android:textSize="@dimen/widget_text_size_v"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/widget_margin"
            android:text="@string/play_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/jar_widget_bg"
        android:layout_margin="@dimen/widget_button_margin">

        <ImageButton
            android:id="@+id/appwidget_third_jar"
            android:layout_width="31dp"
            android:layout_height="71dp"
            android:layout_margin="3dp"
            android:src="@drawable/jar"
            android:background="@color/colorWhiteBG"
            android:contentDescription="@string/appwidget_text" />

        <TextView
            android:id="@+id/jar_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBottle"
            android:textSize="@dimen/widget_text_size_v"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/widget_margin"
            android:text="@string/give_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/jar_widget_bg"
        android:layout_margin="@dimen/widget_button_margin">

        <ImageButton
            android:id="@+id/appwidget_go"
            android:layout_width="26dp"
            android:layout_height="59dp"
            android:layout_margin="3dp"
            android:src="@drawable/ic_go_48dp"
            android:background="@color/colorWhiteBG"
            android:contentDescription="@string/appwidget_text" />

    </LinearLayout>

</LinearLayout>